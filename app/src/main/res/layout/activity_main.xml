        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonminus"
        android:id="@+id/buttonminus"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_below="@+id/button."
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttondiv"
        android:id="@+id/buttondiv"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_alignBaseline="@+id/buttonC"
        android:layout_alignBottom="@+id/buttonC"
        android:layout_toRightOf="@+id/buttonX"
        android:layout_toEndOf="@+id/buttonX" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttoneq"
        android:id="@+id/buttoneq"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_above="@+id/buttonplus"
        android:layout_alignLeft="@+id/buttonminus"
        android:layout_alignStart="@+id/buttonminus"
        android:layout_marginBottom="48dp" />

</RelativeLayout>
